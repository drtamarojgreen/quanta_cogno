    {
        "name": "getMentalHealthGenes",
        "description": "retrieve genes associated with mental health conditions",
        "parameters": {
            "type": "object",
            "properties": {
                "condition": {
                    "type": "string",
                    "description": "mental health condition (depression, anxiety, bipolar, schizophrenia, autism, adhd, ptsd, etc.)",
                    "default": null
                },
                "confidence_level": {
                    "type": "string",
                    "description": "evidence confidence level (high, medium, low, all)",
                    "default": "medium"
                },
                "study_type": {
                    "type": "array",
                    "description": "types of studies to include",
                    "items": {
                        "type": "string",
                        "description": "study type (gwas, candidate_gene, linkage, expression, knockout, etc.)"
                    }
                },
                "population": {
                    "type": "array",
                    "description": "population ancestry groups",
                    "items": {
                        "type": "string",
                        "description": "population group (european, east_asian, african, hispanic, mixed, etc.)"
                    }
                },
                "include_drug_targets": {
                    "type": "Boolean",
                    "description": "include genes that are known drug targets",
                    "default": false
                }
            },
            "required": [],
            "optional": [
                "condition",
                "confidence_level",
                "study_type",
                "population",
                "include_drug_targets"
            ]
        }
    },
    {
        "name": "getGeneVariants",
        "description": "retrieve genetic variants for specified genes with mental health relevance",
        "parameters": {
            "type": "object",
            "properties": {
                "gene_ids": {
                    "type": "array",
                    "description": "gene identifiers",
                    "items": {
                        "type": "string",
                        "description": "gene id"
                    }
                },
                "variant_type": {
                    "type": "array",
                    "description": "types of variants to include",
                    "items": {
                        "type": "string",
                        "description": "variant type (snp, indel, cnv, structural, regulatory, etc.)"
                    }
                },
                "clinical_significance": {
                    "type": "array",
                    "description": "clinical significance categories",
                    "items": {
                        "type": "string",
                        "description": "significance level (pathogenic, likely_pathogenic, uncertain, likely_benign, benign, drug_response)"
                    }
                },
                "allele_frequency": {
                    "type": "object",
                    "description": "allele frequency filters",
                    "properties": {
                        "min_frequency": {
                            "type": "number",
                            "description": "minimum allele frequency"
                        },
                        "max_frequency": {
                            "type": "number",
                            "description": "maximum allele frequency"
                        },
                        "population": {
                            "type": "string",
                            "description": "reference population"
                        }
                    }
                },
                "include_pharmacogenomics": {
                    "type": "Boolean",
                    "description": "include pharmacogenomic variants",
                    "default": false
                }
            },
            "required": [
                "gene_ids"
            ],
            "optional": [
                "variant_type",
                "clinical_significance",
                "allele_frequency",
                "include_pharmacogenomics"
            ]
        }
    },
    {
        "name": "getPathwayAnalysis",
        "description": "analyze biological pathways relevant to mental health",
        "parameters": {
            "type": "object",
            "properties": {
                "gene_list": {
                    "type": "array",
                    "description": "list of genes for pathway analysis",
                    "items": {
                        "type": "string",
                        "description": "gene identifier"
                    }
                },
                "pathway_databases": {
                    "type": "array",
                    "description": "pathway databases to query",
                    "items": {
                        "type": "string",
                        "description": "database name (kegg, reactome, go, biocarta, panther, etc.)"
                    }
                },
                "mental_health_focus": {
                    "type": "Boolean",
                    "description": "prioritize mental health related pathways",
                    "default": true
                },
                "enrichment_method": {
                    "type": "string",
                    "description": "statistical enrichment method (fisher, hypergeometric, gsea, etc.)",
                    "default": "fisher"
                },
                "significance_threshold": {
                    "type": "number",
                    "description": "p-value threshold for significance",
                    "default": 0.05
                },
                "include_drug_pathways": {
                    "type": "Boolean",
                    "description": "include pathways targeted by psychiatric medications",
                    "default": false
                }
            },
            "required": [
                "gene_list"
            ],
            "optional": [
                "pathway_databases",
                "mental_health_focus",
                "enrichment_method",
                "significance_threshold",
                "include_drug_pathways"
            ]
        }
    },
