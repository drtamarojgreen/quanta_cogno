    {
        "name": "getPolygeneticRiskScores",
        "description": "calculate or retrieve polygenic risk scores for mental health conditions",
        "parameters": {
            "type": "object",
            "properties": {
                "condition": {
                    "type": "string",
                    "description": "mental health condition for PRS calculation",
                    "default": null
                },
                "variant_data": {
                    "type": "array",
                    "description": "variant data for PRS calculation",
                    "items": {
                        "type": "object",
                        "properties": {
                            "variant_id": {
                                "type": "string",
                                "description": "variant identifier"
                            },
                            "genotype": {
                                "type": "string",
                                "description": "genotype (0/0, 0/1, 1/1)"
                            }
                        }
                    }
                },
                "reference_population": {
                    "type": "string",
                    "description": "reference population for PRS weights",
                    "default": "mixed"
                },
                "prs_method": {
                    "type": "string",
                    "description": "PRS calculation method (standard, bayesian, machine_learning)",
                    "default": "standard"
                },
                "include_confidence_intervals": {
                    "type": "Boolean",
                    "description": "include confidence intervals in results",
                    "default": true
                },
                "adjust_for_ancestry": {
                    "type": "Boolean",
                    "description": "adjust PRS for ancestry",
                    "default": true
                }
            },
            "required": [],
            "optional": [
                "condition",
                "variant_data",
                "reference_population",
                "prs_method",
                "include_confidence_intervals",
                "adjust_for_ancestry"
            ]
        }
    },
